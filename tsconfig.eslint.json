{
	"extends": "./tsconfig.json",
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"./vite.config.js",
		"./vite.config.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"./env.utils.ts",
		"./vitest.setup.ts",
		"./vitest.config.ts",
		"./tailwind.config.js",
		"./svelte.config.js",
		"./postcss.config.js",
		"./playwright.config.ts",
		"./e2e/**/*.js",
		"./e2e/**/*.ts",
		"./scripts/*.mjs",
		"./scripts/*.ts"
	],
	"exclude": [
		"./node_modules/**",
		"./src/frontend/service-worker.js",
		"./src/frontend/service-worker.ts",
		"./src/frontend/service-worker.d.ts"
	]
}
