{
	"compilerOptions": {
		"moduleDetection": "force",
		"module": "ES2022",
		"target": "ES2022",
		"lib": ["ES2023", "dom"],
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"isolatedModules": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
